@model RelatorioDataModel
<h1>Vendas por Período</h1>

<form asp-controller="Relatorio" asp-action="Data">
    <div class="form-group">
        <label>Período:</label>
        <input asp-for="DataInicio" type="date" class="form-control" />
    </div>
    <div class="form-group">
        <input asp-for="DataFim" type="date" class="form-control" />
    </div>
    <button type="submit" class="btn btn-block btn-success">Pesquisar</button>
</form>

<br />
<br />
<table class="table table-bordered">
    <thead>
        <tr>
            <th>ID</th>
            <th>Data</th>
            <th>Vendedor</th>
            <th>Cliente</th>
            <th>Total</th>
        </tr>
    </thead>
    <tbody>
        @{
            if (ViewBag.Resultado != null)
            {
                foreach (var item in (List<VendaModel>)ViewBag.Resultado)
                {
                    <tr>
                        <td>@item.Idvenda</td>
                        <td>@item.Data</td>
                        <td>@item.Vendedor</td>
                        <td>@item.Cliente</td>
                        <td>R$ @item.Total</td>
                    </tr>
                }
            }
        }
    </tbody>
</table>