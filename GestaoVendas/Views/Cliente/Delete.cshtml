@model ClienteModel

@{
    Layout = null;
}

<form asp-controller="Cliente" asp-action="Delete">
    <div>
        <div class="modal-dialog">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h4 class="modal-title">Apagar Cliente?</h4>
                    </div>
                    <div class="modal-body">
                        <div class="form-group" hidden="hidden">
                            <label>ID:</label>
                            <input asp-for="Idcliente" type="Text" class="form-control"
                                   value="@ViewBag.Cliente.Idcliente" readonly="readonly" />
                        </div>
                        <div class="form-group">
                            <label>Nome:</label>
                            <input asp-for="Nome" type="Text" class="form-control"
                                   value="@ViewBag.Cliente.Nome" readonly="readonly" />
                        </div>
                        <div class="form-group">
                            <label>Email:</label>
                            <input asp-for="Email" type="Text" class="form-control"
                                   value="@ViewBag.Cliente.Email" readonly="readonly" />
                        </div>
                    </div>
                    <div class="modal-footer">
                        @using (Html.BeginForm())
                        {
                            @Html.AntiForgeryToken()
                            <div class="form-actions no-color">
                                <button type="submit" class="btn btn-danger">Sim</button>
                                <button type="button" class="btn btn-primary" 
                                        data-dismiss="modal">Não</button>
                            </div>
                        }
                    </div>
                </div><!-- /.modal-content -->
            </div><!-- /.modal-dialog -->
        </div>
    </div>
</form>

